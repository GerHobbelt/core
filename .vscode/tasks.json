{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
          "LIBREOFFICE_HOME": "/usr/lib/libreoffice"
        }
     },
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "bash ./.vscode/build.sh",
            "windows": {
                "command": ".\\.vscode\\build.bat"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
  }